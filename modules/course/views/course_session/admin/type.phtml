<div class="notification_type <?php echo $key == $selected_key ? 'active' : '';?>" id="<?php echo H($uniqid) ?>">
    <div class="tag_title">
        <input class="text hidden" name="key" value="<?php echo H($key) ?>" />
        <span class="type_name"><?= $value ?></span>
    </div>
</div>

<script type="text/javascript">
    $("#<?php echo $uniqid?>").bind('click', function(e){
        var $item = $(this);
        Q.trigger({
            object: 'get_course_session',
            event: 'click',
            data: {
                key: '<?php echo $key;?>',
                container_id: '<?php echo $container_id;?>'
            },
            url: '<?php echo URI::url('!course/admin')?>'
        });
        $('div.notification_type').removeClass('active');
        $item.addClass('active');
        return false;
    });
</script>
